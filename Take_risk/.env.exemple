EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# 🌍 Heroku or Deployment
ALLOWED_HOSTS=yourdomain.com,localhost,127.0.0.1
